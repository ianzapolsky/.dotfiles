[alias]
  au  = add -u
  b   = branch
  st  = status
  cm  = commit -m
  co  = checkout
  l   = !git --no-pager log -30 --graph --pretty=tformat:'%C(bold blue)%h%Creset - (%C(red)%an%Creset) - %s %Cgreen(%cr) %Creset' --abbrev-commit
  nb  = checkout -b
  po  = push origin
  pro = pull --rebase origin

[color]
  ui = true

  [color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
